<div style="text-align: center;">
  <div class="jumbotron text-center" style="color: white;background-color: orangered">
<p>
<h1><%= @campaign.name%></h1>
</p>

<p>
 <h3> <%= t('tags.tags')%>: <%=raw  @campaign.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %></h3>
</p>
  </div>
  <h1 style="color: #cc0000;text-align: left">
    <%= t'campaign.progress' %></h1>
<div class="progress">
  <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="70"
       aria-valuemin="0" aria-valuemax="100" style="width:<%=progress%>">
    <%=progress%>
  </div>
</div>
  <div class="container">
  <div class="row" style="margin-left: 5%;" >
      <% if current_user %>
      <h4 style="color: #cc0000"> <%=t('campaign.ideological') %>:</h4>   <%= rating_for @campaign, "ideological" ,disable_after_rate: true, imdb_avg: true %>
      <h4 style="color: #cc0000"> <%=t('campaign.helpfulness') %>:</h4>  <%= rating_for @campaign, "helpfulness", disable_after_rate: true, imdb_avg: true  %>
        <h4 style="color: #cc0000"> <%=t('campaign.fun') %>:</h4>  <%= rating_for @campaign, "fun", disable_after_rate: true, imdb_avg: true %>
      <% end %>
  </div>
  <% if user_signed_in? %>
    <%if @campaign.user_id == current_user.id or current_user.admin?%>
      <%= link_to t('campaign.delete'),campaign_path,method: :delete %>
      <%= link_to t('campaign.edit'), edit_campaign_path %>
      <p>
        <%t'news.add_news' %>
        <%= render 'news/form'%>
      </p>
    <%end %>
  <%end %>
<br/>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% if @campaign.images.attached? %>
      <div class="carousel-item active">
        <%= image_tag(@campaign.images[0], width: 640, height: 480) %>
      </div>
      <% @campaign.images.drop(1).each do |image| %>
    <div class="carousel-item">
      <%= image_tag(image, width: 640, height: 480)%>
    </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<div class="container" >
  <div class="row">
<div class="col-sm-4">
  <%= t('news.news')%>:
  <div class="overflow-auto">
  <% @campaign.news.each do |news| %>
    <%= render news %></p>
  <% end %>
  </div>
</div>
<div class="col-sm-8" >
<% unless @video_url.nil? %>
<div class="container">
      <iframe height="300" width="600" src=<%= @video_url %> frameborder="0" scrolling="yes" allowfullscreen></iframe>
</div>
<% end %>
  <h3 style="color: darkmagenta;text-align: left">
<p>
  <strong><%= t 'campaign.description'%>:</strong>
  <%= markdown(@campaign.description) %>
</p>
<p>
  <strong><%= t 'campaign.end_time'%>:</strong>
  <%= @campaign.end_time %>
</p>

<p>
  <strong><%= t 'campaign.target_amount'%>:</strong>
  <%= @campaign.target_amount %>
</p>
  </h3>
</div>
</div>
</div>
<p>
  <h5 style="text-align: left">
  <strong><%=t 'comment.comments' %></strong>
  <% @campaign.comments.each do |comment| %>
    <%= render comment %></p>
  <% end %>
  <% if user_signed_in? %>
  <%= render 'comments/form' %>
    <%end %>
</p>
    </h1>
    </div>
</div>
<%= javascript_include_tag 'ratyrate.js', "data-turbolinks-track": false %>