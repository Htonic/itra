<div style="text-align: center;">
<% if user_signed_in? %>
  <%if @campaign.user_id == current_user.id %>
<%= link_to t('campaign.delete'),campaign_path,method: :delete %>
    <%= link_to t('campaign.edit'), edit_campaign_path %>
    <p>
      <%t'news.add_news' %>
      <%= render 'news/form'%>
    </p>
    <%end %>
  <%end %>
<p>
  <div class="left">
  <% @campaign.news.each do |news| %>
    <%= render news %></p>
  <% end %>
    </div>
<h1><%= @campaign.name %></h1>
</p>
<p>
  <%= t('tags.tags')%>: <%=raw  @campaign.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
</p>
<% t'campaign.progress' %>
<div class="progress">
  <div class="progress-bar bg-danger" role="progressbar" aria-valuenow="70"
       aria-valuemin="0" aria-valuemax="100" style="width:<%=progress%>">
    <%=progress%>
  </div>
</div>

<br/>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% if @campaign.images.attached? %>
      <div class="carousel-item active">
        <%= image_tag(@campaign.images[0]) %>
      </div>
      <% @campaign.images.drop(1).each do |image| %>
    <div class="carousel-item">
      <%= image_tag(image, width: 640, height: 480)%>
    </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% unless @video_url.nil? %>
<div class="container">
      <iframe height="300" width="600" src=<%= @video_url %> frameborder="0" scrolling="yes" allowfullscreen></iframe>
</div>
<% end %>
</div>
<p>
  <strong><%= t 'campaign.description'%>:</strong>
  <%= markdown(@campaign.description) %>
</p>
<p>
  <strong><%= t 'campaign.end_time'%>:</strong>
  <%= @campaign.end_time %>
</p>

<p>
  <strong><%= t 'campaign.target_amount'%>:</strong>
  <%= @campaign.target_amount %>
</p>

  <div class="progress-bar" role="progressbar" aria-rowindex="<%progress%>"></div>
<p>
  <strong><%=t 'comment.comments' %></strong>
  <% @campaign.comments.each do |comment| %>
    <%= render comment %></p>
  <% end %>
  <% if user_signed_in? %>
  <%= render 'comments/form' %>
    <%end %>
</p>
