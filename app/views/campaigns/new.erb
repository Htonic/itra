<div style="text-align: center;">
<%= form_with(model: @campaign, local: true) do |f| %>
  <p>
    <%= f.label t'campaign.name' %><br>
    <%= f.text_field :name %>
  </p>
    <%= f.hidden_field :user_id, :value => @user.id %>
  <p>
    <%= f.label t'campaign.description' %><br>
    <%= f.text_area :description %>
  </p>
    <div class="field">
      <%= f.label :tag_list, t('tags.tags_and_commas') %><br />
      <%= f.text_field :tag_list %>
    </div>
  <p>
    <%= f.label t'campaign.end_time' %><br>
    <%= f.date_field :end_time %>
  </p>
  <p>
    <%= f.label t'campaign.target_amount' %><br>
    <%= f.number_field :target_amount %>
  </p>
  <br />
    <div class="image-upload">

      <%= f.file_field :images,multiple: true, class:"image-upload"%>
    </div>

    <p>
      <%= f.label t'campaign.add_video_link' %><br>
      <%= f.text_field :video_link %>
    </p>
  <p>
    <%= f.submit t'campaign.add'%>
  </p>
  <%end %>
<p><%= link_to t('link.home'), welcome_index_path %></p>
</div>