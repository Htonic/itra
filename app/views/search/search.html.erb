<h1><%= t'campaign.search_results' %></h1>

<% if @campaigns %>
  <ul class="search_results">

    <% @campaigns.each do |campaign| %>
      <li>
        <h3>
          <%= link_to campaign.try(:name) ?
                          campaign.name.html_safe : campaign.name,
                      controller: "campaigns", action: "show", id: campaign._id %>
        </h3>
        <% if campaign.try(:description) %>
            <p><%= campaign.description.html_safe %>...</p>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p><% t'campaign.search_no_results' %></p>
<% end %>