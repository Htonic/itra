<%= form_with(model: [@campaign, @campaign.rewards.build]) do |f| %>
  <%= f.hidden_field :user_id , :value => @campaign.user_id %>
  <%= f.hidden_field :campaign_id , :value => @campaign.id %>
  <div class="field">
    <p>
      <%= f.label t('bonus.title')%><br />
      <%= f.text_field :name %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label t('bonus.description')%><br />
      <%= f.text_area :description %>
    </p>
  </div>
  <div class="field">
    <p>
      <%= f.label t('bonus.cost')%><br />
      <%= f.number_field :cost %>
    </p>
  </div>
    <%= f.submit t('bonus.add_bonus') %>
<% end %>
